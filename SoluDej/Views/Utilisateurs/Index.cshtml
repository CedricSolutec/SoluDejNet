@model IEnumerable<SoluDej.Models.Utilisateurs>

@{
    ViewBag.Title = "SoluDej - Liste des utilisateurs";
}

<h2>Liste des utilisateurs</h2>

<p>
    @Html.ActionLink("Créer un nouvel utilisateur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mailSolutec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mailNotification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.motDePasse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateDeNaissance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Entreprises.nom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mailSolutec)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mailNotification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.motDePasse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateDeNaissance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Entreprises.nom)
        </td>
        <td>
            @Html.ActionLink("Editer", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
