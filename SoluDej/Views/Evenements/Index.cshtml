@model IEnumerable<SoluDej.Models.Evenements>

@{
    ViewBag.Title = "SoluDej - Liste des évènements";
}

<h2>Liste des évènements</h2>

<p>
    @Html.ActionLink("Créer un nouvel évènement", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Restaurants.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlacesLimitees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombrePlaces)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Commentaire)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Restaurants.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlacesLimitees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePlaces)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Commentaire)
        </td>
        <td>
            @Html.ActionLink("Editer", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
